
<android.support.constraint.ConstraintLayout
    tools:layout_editor_absoluteY="81dp"
    android:orientation="horizontal"
    android:background="#ffe6ff"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/linearLayout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="80dp"
        android:background="#00ff"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="Create New Account"
        android:textColor="#1ebea5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lastname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:orientation="horizontal"
        android:text="FIRST NAME"
        android:textColor="#00001a"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/firstname"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:orientation="horizontal"
        android:text="LAST NAME"
        android:textColor="#00001a"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/lastname"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="215dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:orientation="horizontal"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/pincode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/firstname" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="54dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:orientation="horizontal"
        android:text="CITY"
        android:textColor="#00001a"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/city"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:orientation="horizontal"
        android:layout_height="44dp"
        android:layout_width="50dp"
        android:id="@+id/city"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/emailid"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintEnd_toStartOf="@+id/textView5"/>

    <TextView
        android:orientation="horizontal"
        android:layout_height="48dp"
        android:layout_width="92dp"
        android:id="@+id/textView5"
        android:text="PIN CODE"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lastname"
        app:layout_constraintStart_toEndOf="@+id/city"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/emailid"
        app:layout_constraintEnd_toStartOf="@+id/pincode"
        android:fontFamily="sans-serif-black"
        android:textColor="#00001a"/>

    <EditText
        android:id="@+id/pincode"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        android:orientation="horizontal"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/emailid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/lastname" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="sans-serif-black"
        android:orientation="horizontal"
        android:text="E-MAIL ID"
        android:textColor="#00001a"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="137dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-black"
        android:orientation="horizontal"
        android:text="CONTACT NO."
        android:textColor="#00001a"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toStartOf="@+id/contactno"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:orientation="horizontal"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/contactno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <EditText
        android:id="@+id/contactno"
        android:layout_width="208dp"
        android:layout_height="39dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="phone"
        android:orientation="horizontal"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/emailid" />

    <Button
        android:background="#006666"
        android:layout_height="38dp"
        android:layout_width="90dp"
        android:id="@+id/next"
        android:text="NEXT"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>